{
    "buildCommand": "cd client && npm ci && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install",
    "functions": {
        "api/index.js": {
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}